{
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/admin/login$", "dest": "/public/admin/login.html" },
    { "src": "^/admin/upload$", "dest": "/public/admin/upload.html" },
    { "src": "^/admin$", "dest": "/public/admin/login.html" },
    { "src": "^(?!/api/)(.*)$", "dest": "/public/$1" }
  ]
}
