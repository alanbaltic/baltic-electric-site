{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x",
      "memory": 256,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/admin$",
      "dest": "/admin/login.html"
    },
    {
      "src": "/admin/$",
      "dest": "/admin/login.html"
    },
    {
      "src": "/admin/login$",
      "dest": "/admin/login.html"
    },
    {
      "src": "/admin/upload$",
      "dest": "/admin/upload.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}