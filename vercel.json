{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "vercel-nodejs@4.0.0",
      "memory": 256,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/admin/login$", "dest": "/admin/login.html" },
    { "src": "^/admin/upload$", "dest": "/admin/upload.html" },
    { "src": "^/admin/?$", "dest": "/admin/login.html" },
    { "src": "^(?!/api/)(.*)$", "dest": "/public/$1" }
  ]
}
